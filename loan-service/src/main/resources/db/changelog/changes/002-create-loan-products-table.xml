<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-loan-products-table" author="los-system">
        <createTable tableName="loan_products" schemaName="loan">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="product_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="min_amount" type="DECIMAL(15,2)"/>
            <column name="max_amount" type="DECIMAL(15,2)"/>
            <column name="min_tenor" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="max_tenor" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="DECIMAL(5,2)"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
