<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-approvals-table" author="los-system">
        <createTable tableName="approvals" schemaName="loan">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="loan_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="approval_level" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="approver_name" type="VARCHAR(100)"/>
            <column name="decision" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="VARCHAR(1000)"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableSchemaName="loan"
                baseTableName="approvals"
                baseColumnNames="loan_id"
                constraintName="fk_approvals_loan"
                referencedTableSchemaName="loan"
                referencedTableName="loans"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="approvals" schemaName="loan" indexName="idx_approvals_loan_id">
            <column name="loan_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
